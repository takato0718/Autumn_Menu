<div class="mb-8">
  <!-- 食材選択フォーム -->
  <%= form_with url: recipes_path, method: :get, local: true, class: "bg-white p-6 rounded-lg shadow-md" do |f| %>
    <div class="flex flex-col md:flex-row gap-4 items-end">
      <div class="flex-1">
        <%= f.label :ingredient, "食材を選んでください", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :ingredient, 
            options_for_select([['すべて', '']] + @ingredients.map { |i| [i, i] }, @selected_ingredient),
            {}, 
            { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500" } %>
      </div>
      <div>
        <%= f.submit "レシピを探す", class: "bg-orange-600 hover:bg-orange-700 text-white font-bold py-2 px-6 rounded-md transition duration-300" %>
      </div>
    </div>
  <% end %>
</div>

<!-- 選択された食材の表示 -->
<% if @selected_ingredient.present? %>
  <div class="mb-6">
    <div class="bg-orange-100 border-l-4 border-orange-500 p-4 rounded">
      <p class="text-orange-800">
        <span class="font-semibold">選択された食材:</span> <%= @selected_ingredient %>
        <span class="ml-4 text-sm">(<%= @recipes.count %>件のレシピが見つかりました)</span>
      </p>
    </div>
  </div>
<% end %>

<!-- レシピ一覧 -->
<% if @recipes.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @recipes.each do |recipe| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300">
        <% if recipe.image_url.present? %>
          <img src="<%= recipe.image_url %>" alt="<%= recipe.name %>" class="w-full h-48 object-cover">
        <% else %>
          <div class="w-full h-48 bg-gradient-to-br from-orange-400 to-red-500 flex items-center justify-center">
            <span class="text-white text-4xl">🍂</span>
          </div>
        <% end %>
        
        <div class="p-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= recipe.name %></h3>
          
          <% if recipe.description.present? %>
            <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= recipe.description %></p>
          <% end %>
          
          <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
              </svg>
              <%= recipe.cooking_time.present? ? "#{recipe.cooking_time}分" : "時間未設定" %>
            </span>
            <span class="bg-orange-100 text-orange-800 px-2 py-1 rounded-full text-xs">
              <%= recipe.difficulty %>
            </span>
          </div>
          
          <div class="mb-4">
            <p class="text-sm text-gray-600 mb-2">主な食材:</p>
            <div class="flex flex-wrap gap-1">
              <% recipe.ingredient_list.first(3).each do |ingredient| %>
                <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs">
                  <%= ingredient %>
                </span>
              <% end %>
              <% if recipe.ingredient_list.length > 3 %>
                <span class="text-gray-500 text-xs">他<%= recipe.ingredient_list.length - 3 %>種類</span>
              <% end %>
            </div>
          </div>
          
          <%= link_to "レシピを見る", recipe_path(recipe), 
              class: "block w-full text-center bg-orange-600 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded transition duration-300" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-12">
    <div class="text-6xl mb-4">🍂</div>
    <h3 class="text-xl font-semibold text-gray-700 mb-2">レシピが見つかりませんでした</h3>
    <p class="text-gray-500 mb-6">
      <% if @selected_ingredient.present? %>
        「<%= @selected_ingredient %>」を使ったレシピはまだ登録されていません。
      <% else %>
        レシピがまだ登録されていません。
      <% end %>
    </p>
    <%= link_to "すべてのレシピを見る", recipes_path, 
        class: "inline-block bg-orange-600 hover:bg-orange-700 text-white font-bold py-2 px-6 rounded transition duration-300" %>
  </div>
<% end %>